#container
  = image_tag "pictures/#{@picture.name}"

#id style="display: none;"
  = @picture.id

button#toggle ☰

#controls
  div#zoom
    button#in +
    button#out -
    button#reset ⟲
  div#names
    - @picture.people.each do |person|
      span id=person.id = person.name

#modal
  .box
    h2: a(href=@picture.website) = @picture.title
    h3: a(href=@picture.website) = "by " + @picture.author
    p Drag to scroll, click to guess. Click anywhere to start.